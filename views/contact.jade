extends layout

block content
	#jumbotron-contact.jumbotron
		.container
			.row
				.col-sm-12.contact-form
					form(method='post', action='contact/send')
						h1 Contact Us!
						.form-group
							label Name
							input.form-control(type='text',name='name', placeholder='Enter Name')
						.form-group
							label Email
							input.form-control(type='email', name='email', placeholder='Enter Email')
						.form-group
							label Message
							textarea.form-control(rows='10', name='message', placeholder='Enter Message...')
						button.btn.btn-default(type='submit') Submit
